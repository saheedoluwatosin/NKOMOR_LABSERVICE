generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id            String    @id @default(uuid())
  customId       String    @unique 
  email         String    @unique
  password      String
  role          Role
  providerType  ProviderType? // Nullable for non-service providers
  labName       String?
  location     String?
  businessNo    String?
  PhoneNumber   String?
  name          String?
  gender        String?
  dob           DateTime?
  pharmacyName  String?
  address       String?
  licenseNumber String?
  drugCategories String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


enum Role {
  PATIENT
  SERVICE_PROVIDER
}

enum ProviderType {
  LAB
  PHARMACY
}






